<!-- Page Header -->
    <header class="masthead" style="background-image: url('../assets/home-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading" id="uberschrift">
              <h1>Willkommen im Jahreszeitenblog! <br> Übersicht aller Beiträge</h1>
              <span class="subheading">Wie schreitet der Frühling bei euch voran?</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    
    
    <!-- Main Content -->
    <div class="container">
      <h1>  </h1>
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <% @posts.each do |post| %>
           <div class="post-preview">
              <h2 class="post-title"> <%= link_to post.title, post %> </h2>
              <p h3 class="post-subtitle"> <%= post.content.html_safe %> </p>
              <p> <%= post.image_url %> </p>
              <% if user_signed_in? %>
              <p><%= link_to "Bearbeiten", edit_post_path(post) %>
              | <%= link_to "Löschen", post, :data => {:confirm => "Bist du sicher?"}, :method => :delete %></p>
            <% end %>
            </div>
          <% end %>
          
          <hr>
          
          <!-- Pager -->
          <div class="clearfix">
            <%= will_paginate @posts %>
            <!--a class="btn btn-primary float-right" href="#"> Older Posts &rarr; </a-->
          </div>
          
          
        </div>
      </div>
    </div>

    <hr>

    
<% if user_signed_in? %>
<p> <%= link_to "Neuen Beitrag erstellen", new_post_path %> </p>
<% end %>